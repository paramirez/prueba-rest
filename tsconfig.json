{
  "compilerOptions": {
      "lib": ["es5", "es6"],
      "target": "es5",
      "outDir": "build",
      "module": "commonjs",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "forceConsistentCasingInFileNames": true,
      "downlevelIteration": true
  },
  "include": [
      "src/**/*.ts"
  ],
  "exclude": ["node_modules", "**/*.spec.ts"]
}